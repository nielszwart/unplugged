{% extends 'admin/base.html.twig' %}

{% block title %}{% trans %}Tools{% endtrans %}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row header-row">
            <div class="col-6">
                <h1>{% trans %}Tools{% endtrans %}</h1>
            </div>
            <div class="col-6">
                <a href="{{ getLocalizedRoute('admin_tool_create', {locale: 'en'}) }}" class="btn btn-dark float-right">{% trans %}New EN{% endtrans %}</a>
                <a href="{{ getLocalizedRoute('admin_tool_create', {locale: 'nl'}) }}" class="btn btn-dark float-right">{% trans %}New NL{% endtrans %}</a>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead class="thead-inverse">
            <tr>
                <th>ID</th>
                <th>{% trans %}Language{% endtrans %}</th>
                <th>{% trans %}Title{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for tool in tools %}
                <tr>
                    <td>{{ tool.id }}</td>
                    <td>
                        {% if tool.locale == 'nl' %}
                            <img src="{{ asset('img/dutch.png') }}" class="language-flag">
                        {% elseif tool.locale == 'en' %}
                            <img src="{{ asset('img/english.png') }}" class="language-flag">
                        {% else %}
                            {{ tool.locale|upper }}
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ getLocalizedRoute('admin_tool_edit', {'id': tool.id, 'locale': tool.locale}) }}">
                            {{ tool.title }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
