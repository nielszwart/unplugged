{% extends 'admin/base.html.twig' %}
{% form_theme form 'admin/form/fields.twig' %}
{% block title %}{% trans %}New tool{% endtrans %}{% endblock %}

{% block body %}
    <div class="container-fluid edit-page">
        <div class="row header-row">
            <div class="col-6">
                <h1>{% trans %}New tool{% endtrans %}</h1>
            </div>
            <div class="col-6">
                <a href="{{ getLocalizedRoute('admin_tool_overview') }}" class="btn btn-dark float-right">{% trans %}Back to overview{% endtrans %}</a>
            </div>
        </div>

        <div class="row">
            <div class="col-1">&nbsp;</div>
            <div class="col-10">
                {{ form_start(form) }}

                <div class="form-group row">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                </div>

                <div class="form-group row">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image) }}
                </div>

                <div class="form-group row">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content, {'class': 'ckeditor'}) }}
                </div>

                <div class="form-group row">
                    {{ form_label(form.link) }}
                    {{ form_widget(form.link) }}
                </div>

                <div class="form-group row">
                    {{ form_label(form.file) }}
                    {{ form_widget(form.file) }}
                </div>

                <div class="form-group row">
                    {{ form_label(form.new_tab) }}
                    {{ form_widget(form.new_tab) }}
                </div>

                <button type="submit" class="btn btn-success float-right">{% trans %}Save{% endtrans %}</button>
            </div>
            <div class="col-1">&nbsp;</div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.ckeditor.com/ckeditor5/1.0.0-alpha.2/classic/ckeditor.js"></script>
    <script>
        var editors = document.querySelectorAll('.ckeditor');
        var i;
        for (i = 0; i < editors.length; i++) {
            console.log('hoi');
            ClassicEditor
                .create(editors[i])
                .catch(error => {
                console.error(error);
        }
        );
        }
    </script>
{% endblock %}
