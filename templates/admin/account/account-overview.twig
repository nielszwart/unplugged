{% extends 'admin/base.html.twig' %}

{% block title %}{% trans %}Accounts{% endtrans %}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row header-row">
            <div class="col-3">
                <h1>{% trans %}Accounts{% endtrans %}</h1>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead class="thead-inverse">
            <tr>
                <th>ID</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Address{% endtrans %}</th>
                <th>{% trans %}Postcode{% endtrans %}</th>
                <th>{% trans %}City{% endtrans %}</th>
                <th>{% trans %}Age{% endtrans %}</th>
                <th>{% trans %}E-mail{% endtrans %}</th>
                <th>{% trans %}Phone{% endtrans %}</th>
                <th>{% trans %}Free{% endtrans %}</th>
                <th>{% trans %}Active{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for a in accounts %}
                <tr>
                    <td>{{ a.id }}</td>
                    <td><a href="{{ getLocalizedRoute('admin_account_view', {id: a.id}) }}">{{ a.fullName }}</a></td>
                    <td>{{ a.address }}</td>
                    <td>{{ a.postcode }}</td>
                    <td>{{ a.city }}</td>
                    <td>{{ a.age }}</td>
                    <td>{{ a.user.email }}</td>
                    <td>{{ a.phoneNumber }}</td>
                    <td>{% if a.free %}{% trans %}Ja{% endtrans %}{% else %}{% trans %}Nee{% endtrans %}{% endif %}</td>
                    <td>{% if a.user.isActive %}{% trans %}Ja{% endtrans %}{% else %}{% trans %}Nee{% endtrans %}{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
