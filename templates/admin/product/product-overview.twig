{% extends 'admin/base.html.twig' %}

{% block title %}{% trans %}Products{% endtrans %}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row header-row">
            <div class="col-6">
                <h1>{% trans %}Products{% endtrans %}</h1>
            </div>
            <div class="col-6">
                <a href="{{ getLocalizedRoute('admin_product_create') }}" class="btn btn-dark float-right">{% trans %}New{% endtrans %}</a>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead class="thead-inverse">
            <tr>
                <th>ID</th>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>{% trans %}Price{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td><a href="{{ getLocalizedRoute('admin_product_edit', {id: product.id}) }}">{{ product.title }}</a></td>
                    <td>&euro;{{ product.price }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}