<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <meta name="viewport" content="width=device-width">
        <title>Unplugged</title>
        <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
        {% include "email/base/_styles.twig" %}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
            <table border="0" cellpadding="0" cellspacing="0" width="100%" id="bodyTable" style="height:100%;">
                <tr>
                    <td align="center" valign="top" id="bodyCell">

                        <table border="0" cellpadding="0" cellspacing="0" width="600" id="emailBody">
                            <thead>
                            <tr>
                                <td align="center" valign="top" style="padding:20px; background-color:#6400FF; text-align: center;">
                                    <h1>{% block title %}Unplugged{% endblock %}</h1>
                                    <h5 style="color:white;">{% block subtitle %}{% endblock %}</h5>
                                </td>
                            </tr>
                            </thead>
                            <tbody>
                            <tr style="background-color:#f5f4f2;">
                                <td align="center" valign="top">
                                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                        <tr>
                                            <td align="center" valign="top">
                                                <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                                                    <tr>
                                                        <td align="center" valign="top" width="600" class="flexibleContainerCell" style="padding:20px 20px;">
                                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                                <tr>
                                                                    <td class="textContent">
                                                                        {% block body %}{% endblock %}
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            {% block addRows %}{% endblock %}
                            {% include "email/base/_footer.twig" %}
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
        {% block javascripts %}{% endblock %}
    </body>
</html>
