{% extends 'website/base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block body %}
    <div class="page-header" style="background-image: url({{ asset('uploads/' ~ page.header) }})">
        <div class="text-position">
            <h1>{{ page.title }}</h1>
        </div>
    </div>

    {% if page.id == 7 %}
        {% include 'website/page/_how-it-works-usp.twig' %}
    {% endif %}

    <div class="page-content">
        {{ page.content|raw }}
    </div>

    <div class="page-footer" style="background-image: url({{ asset('uploads/' ~ page.footer) }})">&nbsp;</div>
{% endblock %}