{% extends 'website/base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block body %}
    {% if page.header %}
        <div class="page-header" style="background-image: url('{{ asset('uploads/' ~ page.header) }}')">
            <div class="text-position">
                <div class="image-opacity-bar">
                    <h1 class="{{ page.slug }}">{{ page.title }}</h1>
                </div>
            </div>
        </div>
    {% endif %}

    {% if page.id == 7 %}
        {% include 'website/page/_how-it-works-usp.twig' %}
    {% endif %}

    <div class="page-content">
        {% if not page.header %}
            <h1 class="no-header">{{ page.title }}</h1>
        {% endif %}
        {{ page.content|raw }}
    </div>

    {% if page.footer %}
        <div class="page-footer" style="background-image: url('{{ asset('uploads/' ~ page.footer) }}')">
            {% if page.callToAction %}
                <div class="cta-position">
                    <a href="{{ page.callToActionLink }}" target="_blank">
                        <img class="call-to-action" src="{{ asset('uploads/' ~ page.callToAction) }}">
                    </a>
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
