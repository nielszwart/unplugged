{% extends 'website/base.html.twig' %}

{% block title %}Unplugged{% endblock %}

{% block body %}
    <div class="homepage-header-image" style="background-image: url({{ asset('img/top3.jpg') }})">
        <div class="text-position">
            <h1>Unpluggen was nog nooit zo makkelijk</h1>
            <h2>
                Train, eet en leef volgens de voor jou persoonlijk meest effectieve manier en bereik je doelen sneller.
            </h2>
        </div>
    </div>

    {% if pages %}
    <div class="homepage-pages">
        <ul class="pages">
            {% for page in pages %}
                <li>
                    <div class="image" style="background-image: url({{ asset('uploads/' ~ page.slideImage) }})">
                        <div class="image-text">
                            <div class="image-opacity-bar">
                                <h2>{{ page.slideTitle }}</h2>
                            </div>
                        </div>
                    </div>
                    <div class="content">
                        <div class="content-position">
                            <div class="align-left">
                                {{ page.slideText|raw }}
                                <a href="" class="button-large">{{ page.buttonText }}</a>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <div class="clear"></div>
    </div>
    {% endif %}

{% endblock %}